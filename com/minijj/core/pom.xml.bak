<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.sfit</groupId>
	<artifactId>auth</artifactId>
	<version>1.0745.0</version>
	<packaging>war</packaging>
	<name>auth</name>
	<build>
	<finalName>access</finalName> 
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                        <compilerArguments>
                             <verbose />
                              <bootclasspath>${java.home}/lib/rt.jar</bootclasspath>
                        </compilerArguments>                         
                    </configuration>        
                </plugin>
            </plugins>
        </pluginManagement>
		<resources>
			<resource>
				<directory>src/main/views</directory>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/config</directory>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-webxml</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>src/main/webapp/WEB-INF</outputDirectory>
							<encoding>UTF-8</encoding>
							<resources>
								<resource>
									<directory>src/main/replace/WEB-INF</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-jsp</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>src/main/webapp/</outputDirectory>
							<encoding>GBK</encoding>
							<resources>
								<resource>
									<directory>src/main/replace/jsp</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<version>2.0</version>
				<dependencies>
					<dependency>
						<groupId>javax.mail</groupId>
						<artifactId>mail</artifactId>
						<version>1.4</version>
						<scope>compile</scope>
					</dependency>
				</dependencies>
				<configuration>
					<port>9090</port>
					<httpsPort>9553</httpsPort>
					<path>/auth</path>
					<keystoreFile>${basedir}/jks/webstore.jks</keystoreFile>
					<keystorePass>password</keystorePass>
					<systemProperties>
						<catalina.base>${basedir}/target/tomcat</catalina.base>
					</systemProperties>
					<contextFile>context.xml</contextFile>
					<useTestClasspath>false</useTestClasspath>
					<contextReloadable>false</contextReloadable>
					<additionalClasspathDirs>
						<additionalClasspathDir></additionalClasspathDir>
					</additionalClasspathDirs>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<authcenter.authServerLocation>http://127.0.0.1:9080/authcenter</authcenter.authServerLocation>
				<authcenter.webServiceLocation>http://127.0.0.1:9080/authcenter</authcenter.webServiceLocation>
			</properties>
		</profile>
		<profile>
			<id>deploy</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<authcenter.authServerLocation>bnsconfig:webserver</authcenter.authServerLocation>
				<authcenter.webServiceLocation>bnsconfig:webservice</authcenter.webServiceLocation>
			</properties>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>uapp-dorado-extend</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.codehaus.xfire</groupId>
			<artifactId>xfire-core</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.xfire</groupId>
			<artifactId>xfire-aegis</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>uapp-spframework</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.0</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>uapp-component-authmanage</artifactId>
			<version>1.0.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>uapp-component-jar</artifactId>
			<version>1.0.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>sfit-framework-access</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>sso</artifactId>
			<version>1.0.0</version>
			<classifier>auth</classifier>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>sso</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sfit</groupId>
			<artifactId>uapp-utils</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc14</artifactId>
			<version>10.2.0.1.0</version>
			<type>jar</type>
			<classifier>g</classifier>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>orai18n</artifactId>
			<version>10.2.0.1.0</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>


</project>
